[MASTER]

ignore=tests

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
        cyclic-import,
        wrong-import-position,
        unused-import,
        missing-final-newline,
        wrong-import-order,
        broad-exception-caught,
        no-else-return,
        inconsistent-return-statements,
        too-few-public-methods


[FORMAT]
max-line-length = 80

[REFACTORING]
max-nested-blocks = 2

[DESIGN]
max-branches = 15
max-locals = 10
max-args = 10